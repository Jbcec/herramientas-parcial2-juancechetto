@model Parcial1.ViewModels.ProfesorCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Profesor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreProfesor" class="control-label"></label>
                <input asp-for="NombreProfesor" class="form-control" />
                <span asp-validation-for="NombreProfesor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApellidoProfesor" class="control-label"></label>
                <input asp-for="ApellidoProfesor" class="form-control" />
                <span asp-validation-for="ApellidoProfesor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dni" class="control-label"></label>
                <input asp-for="Dni" class="form-control" />
                <span asp-validation-for="Dni" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CursoDictado" class="control-label"></label>
            </div>
        

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <button type="button" class="btn btn-dark"><a class="LinksA" asp-action="Index">Volver a la lista</a></button>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
